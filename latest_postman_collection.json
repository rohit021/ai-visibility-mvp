      ]
    },
    {
      "name": "Subscriptions",
      "item": [
        {
          "name": "Create Subscription",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"subscription_id\", jsonData.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"collegeId\": 1,\n  \"plan\": \"professional\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/colleges/subscriptions",
              "host": ["{{base_url}}"],
              "path": ["colleges", "subscriptions"]
            },
            "description": "Subscribe to manage a college (auto-saves subscription_id)"
          },
          "response": []
        },
        {
          "name": "Get User Subscriptions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/colleges/subscriptions",
              "host": ["{{base_url}}"],
              "path": ["colleges", "subscriptions"]
            },
            "description": "Get all subscriptions for current user"
          },
          "response": []
        },
        {
          "name": "Get Subscription Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/colleges/subscriptions/{{subscription_id}}",
              "host": ["{{base_url}}"],
              "path": ["colleges", "subscriptions", "{{subscription_id}}"]
            },
            "description": "Get specific subscription details"
          },
          "response": []
        },
        {
          "name": "Update Subscription Plan",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plan\": \"enterprise\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/colleges/subscriptions/{{subscription_id}}/plan",
              "host": ["{{base_url}}"],
              "path": ["colleges", "subscriptions", "{{subscription_id}}", "plan"]
            },
            "description": "Upgrade/downgrade subscription plan"
          },
          "response": []
        }
      ]
    },
