                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/colleges/search?q=Amity&limit=10",
              "host": ["{{base_url}}"],
              "path": ["colleges", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "Amity"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Search for colleges by name"
          },
          "response": []
        },
        {
          "name": "Get Colleges by City",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/colleges/by-city/2",
              "host": ["{{base_url}}"],
              "path": ["colleges", "by-city", "2"]
            },
            "description": "Get all colleges in a specific city (cityId = 2 is Gurugram)"
